<div class="container">
	<h2>post.all</h2>
	<nav class="row row-eq-height">
		<ul class="card">
			<% @posts.each do |posts| %>
				<li class="post-list">
					<%= link_to post_path(posts.id) do %>
						<%= attachment_image_tag posts, :main_image, :fill, 250, 250 %>
					<% end %>
					<div class="card-body inner-box">
						<h4 class="card-text">タイトル</h4>
						<p class="card-text"><%= posts.post_title %></p>
						<% if posts.favorited_by?(current_user) %>
							<label><p>
								<%= link_to post_favorites_path(posts), method: :delete, remote: true do %>
									<span class="glyphicon glyphicon-heart" aria-hidden="true" style="color: red;"></span>
								<% end %>
								<%= posts.favorites.count %>いいね
							</p></label>
						<% else %>
							<label>
								<p><%= link_to post_favorites_path(posts), method: :post, remote: true do %>
									<span class="glyphicon glyphicon-heart" aria-hidden="true" style="color: gray;"></span>
								 <% end %>
								 <%= posts.favorites.count %>いいね</p>
							</label>
						<% end %>
						<label><p><%= "#{posts.post_comments.count}" %>コメント</p></label>
					</div>
				</li>
			<% end %>
		</ul>
	</nav>
</div>
