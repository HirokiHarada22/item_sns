<h2>ユーザー詳細</h2>


<%= attachment_image_tag @user, :profile_image, :fill, 300, 300 %>
<h4>ユーザーネーム</h4>
<%= @user.user_name %>
<section class="following">
    <%= render 'users/following' %>
</section>
<%= render 'users/follow_form' %>
<h4>プロフィール</h4>
<%= @user.profile %>

 <%= link_to 'Myいいね', user_user_favorites_path(@user.id) %>
<% if @user == current_user %>
<%= link_to '編集', edit_user_path %>
<% end %>


<%= link_to 'フォルダnew', new_folder_path(@user.id) %>
<%= link_to 'フォルダリスト', user_folder_list_path(@user.id) %>


<% if @user.id == current_user.id %>
<% else %>
  <% if @isRoom == true %>
    <p><a href="/rooms/<%= @roomId %>">メッセージを送る</a>
  <% else %>
    <%= form_for(@room) do |f| %>
      <%= fields_for @entry do |e| %>
        <%= e.hidden_field :user_id, :value=> @user.id %>
      <% end %>
      <%= f.submit "メッセージを送る" %>
    <% end %>
  <% end %>
<% end %>

<div class="container">
	<nav class="row row-eq-height">
		<ul class="card" id="posts">
			<% @posts.each do |post| %>
				<li class="post-list">
				<%= link_to post_path(post.id),style:"color: #000080;" do %>
					<p style="margin: 7px;"><%= attachment_image_tag post.user,
												:profile_image, :fill, 30, 30, fallback: "no_image.jpeg", size:'30x30',
												class:"card-img-top profile-thumb img-circle" %>  <%= post.user.user_name %>
					</p>
						<%= attachment_image_tag post, :main_image, :fill, 340, 250, style:" margin: 0 5px 5px 5px; " %>
					<div class="card-body inner-box">
						<strong><h4 class="card-text" style="padding-left: 20px;"><%= post.post_title %></h4></strong>
						<p class="post-date"><label id="favorite_count"><%= post.favorites.count %>いいね</label>
						<label><%= "#{post.post_comments.count}" %>コメント</label>
						<label><%= post.created_at.strftime('%Y/%m/%d') %></label></p>
					</div>
				<% end %>
				</li>
			<% end %>
		</ul>
		<div class="scroller-status">
		</div>
		<div class="pagination">
  			<%= paginate @posts %>
		</div>
	</nav>
</div>


