<%= render "users/user_profile" %>

<div class="container">
	<h1><i class="fas fa-dove" style="color: #00DD00;"></i> User Posts</h1>
	<nav class="row row-eq-height">
		<ul class="card" id="posts">
			<% @posts.each do |post| %>
				<li class="post-list caption">
					<span class="text">
						<h2><i class="fas fa-check"></i>Check</h2>
					</span>
					<%= link_to post_path(post.id),style:"color: #000080; text-decoration: none;" do %>
						<p style="margin: 7px;">
							<%= attachment_image_tag post.user,	:profile_image,
																:fill, 30, 30, fallback: "/images/no_image.jpeg", size:'30x30',
																class:"card-img-top profile-thumb img-circle" %>  <%= post.user.user_name %>
						</p>
							<%= attachment_image_tag post, :main_image, :fill, 340, 250, style:" margin: 0 5px 5px 5px; " %>
						<div class="card-body inner-box">
							<strong><h4 class="card-text" style="padding-left: 20px;"><%= post.post_title %></h4></strong>
							<p class="post-date"><label id="favorite_count"><%= post.favorites.count %>いいね</label>
							<label><%= "#{post.post_comments.count}" %>コメント</label>
							<label><%= post.created_at.strftime('%Y/%m/%d') %></label></p>
						</div>
				<% end %>
				</li>
			<% end %>
		</ul>
		<div class="scroller-status">
		</div>
		<div class="pagination">
  			<%= paginate @posts %>
		</div>
	</nav>
</div>