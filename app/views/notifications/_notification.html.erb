<%  visiter = notification.visiter %>
<div class="user-view clearfix">
	<%= link_to user_path(notification.visiter) do %>
		<%=  attachment_image_tag notification.visiter, :profile_image, :fill, 60, 60,
													class:"user-thumb img-circle",
													fallback: "no_image.jpeg",
													size:'60x60'%>
	<% end %>
	<%== notification_form(notification) %>
	<span class="moderate-font"><%= " (#{time_ago_in_words(notification.created_at)}前)" %></span>
	<br>
	<% if !@comment.nil? %>
		<p class="moderate-font"><%= @comment %></p>
	<% end %>
</div>