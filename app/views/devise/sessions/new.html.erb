<div id="vegas">
  <div class="container">
      <div class="col-md-6 col-md-offset-3" style="margin-top: 50px; border-radius: 10px;">
        <div class="form-user style-1 rounded has-shadow-1">

          <div class="form-header text-center">
            <h2 class="form-header-title"><strong>Mytempouchへログイン</strong></h2>
          </div>
          <div class="row">
            <div class="col-xs-offset-1 col-xs-10">
                <div class="text-center">
                    <h4>お気に入りのアイテムを紹介しよう!</h4>
                </div>
            </div>
          </div>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field row text-center">
              <%= f.email_field :email, autofocus: true, autocomplete: "email",
                                class:"col-md-8 col-md-offset-2 field-form", placeholder: 'メールアドレス' %>
            </div>

            <div class="field row text-center">
              <%= f.password_field :password, autocomplete: "current-password",
                                    class:"col-md-8 col-md-offset-2 field-form", placeholder:'パスワード' %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="field row" style="margin-left: 105px;">
                <%= f.check_box :remember_me %>
                <%= f.label :'今後ログイン画面をパスする' %>
              </div>
            <% end %>

            <div class="actions row text-center">
              <%= f.submit "ログイン", class:"btn btn-success col-md-6 col-md-offset-3" %>
            </div>
          <% end %>
          <div class="field row text-center">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
  </div>
</div>
