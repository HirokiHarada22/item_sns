<div id="vegas">
  <div class="container">
    <div class="col-md-6 col-md-offset-3" style="margin-top: 50px; border-radius: 10px;">
      <div class="form-user style-1 rounded has-shadow-1">
        <div class="form-header text-center">
            <h2 class="form-header-title"><strong>アカウントを作成</strong></h2>
        </div>
        <div class="row">
          <div class="col-xs-offset-1 col-xs-10">
              <div class="text-center">
                  <h4>お気に入りのアイテムを紹介しよう!</h4>
              </div>
          </div>
        </div>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>


          <div class="field row text-center">
            <%= f.text_field :user_name, autofocus: true, autocomplete: "user_name", class:"col-md-8 col-md-offset-2 field-form", placeholder: 'ユーザーネーム' %>
          </div>

          <div class="field row text-center">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"col-md-8 col-md-offset-2 field-form",placeholder: 'メールアドレス' %>
          </div>

          <div class="field row text-center">
            <% if @minimum_password_length %>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password", class:"col-md-8 col-md-offset-2 field-form", placeholder: "パスワード(#{ @minimum_password_length }字以上)" %>
          </div>

          <div class="field row text-center">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"col-md-8 col-md-offset-2 field-form", placeholder: 'パスワード確認' %>
          </div>

          <div class="actions row text-center">
            <%= f.submit "登録する", class:"btn btn-success col-md-6 col-md-offset-3" %>
          </div>
        <% end %>
        <div class="field row text-center">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>